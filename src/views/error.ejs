<!-- Error page that is sent back in the browser whenever an error is caught -->

<% layout('layouts/boilerplate')%>

  <div class="container col-6">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Error! <%= err.message %>
      </h4>

      <% if (process.env.NODE_ENV !=="production" ) { %>
        <p>
          <%= err.stack %>
        </p>
        <% } %>
    </div>
  </div>