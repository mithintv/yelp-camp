<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-3">
            <form class="needs-validation" action="/.netlify/functions/app/campgrounds/<%=campground._id%>?_method=PUT"
                method="POST" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%=campground.title %>" required autofocus>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%=campground.location %>" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <!-- Campground Price -->
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%=campground.price %>"
                            required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <!-- Campground Description -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        required><%= campground.description%></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <!-- Campground Images -->
                <div class="mb-3">
                    <div class="mb-3">
                        <label for="formFileMultiple" class="form-label">Add more Images</label>
                        <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                    </div>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach((image, index)=> { %>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="form-check-inline">
                                    <input class="form-check-input" id="image-<%=index%>" type="checkbox"
                                        name="deleteImages[]" value="<%=image.filename%>">
                                    <label for="image-<%=index%>">Delete</label>
                                </div>
                                <img class="img-thumbnail" src="<%= image.thumbnail %>" alt="">
                            </li>
                        </ul>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id%>">Back To Campground</a>

        </div>
    </div>
