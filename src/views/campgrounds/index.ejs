<% layout('layouts/boilerplate')%>


    <div id="cluster-map"></div>

    <% for (let campground of campgrounds){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=campground.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <!-- Campground Title -->
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <!-- Campground Description -->
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <!-- Campground Location -->
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location%>
                            </small>
                        </p>
                        <a class="btn btn-dark" href="/.netlify/functions/app/campgrounds/<%=campground._id%>">View
                            <%=campground.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
            <script>
                /* beautify preserve:start */
                const token = "<%= process.env.MAPBOX_PUBLIC_TOKEN %>";
                const campgrounds = { features: <%- JSON.stringify(campgrounds) %>};

            </script>
            <script src="/scripts/clusterMap.js"></script>
